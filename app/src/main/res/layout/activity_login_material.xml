<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginMaterial"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">


        <TextView
            android:id="@+id/login_welcomeback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Welcome back"
            android:textColor="#000"
            android:textSize="22sp"
            android:transitionName="logo_text"

            />

        <TextView
            android:id="@+id/login_subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Sign in to Famlink App"
            android:textColor="@color/nice_black"
            android:textSize="19sp"
            android:transitionName="logo_desc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_username"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username / Email"
                android:textColorHint="@color/nice_black"
                android:transitionName="username_input"
                app:boxStrokeColor="@color/nice_black"
                app:boxStrokeErrorColor="@color/nice_black"
                app:hintTextColor="@color/nice_black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTextUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/nice_black" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Password"
                android:textColorHint="@color/nice_black"
                android:transitionName="password_input"
                app:boxStrokeColor="@color/nice_black"
                app:boxStrokeErrorColor="@color/nice_black"
                app:endIconTint="@color/nice_black"
                app:hintTextColor="@color/nice_black"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/nice_black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/nice_black"
                    app:endIconTint="@color/purple_500"

                    />


            </com.google.android.material.textfield.TextInputLayout>



            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="#000000"
                android:text="Log In"
                android:textColor="#fff"
                android:transitionName="account_button"

                />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/signup_screen"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEW USER? SIGN UP"
                android:textColor="@color/purple_500"
                android:transitionName="account_change"
                app:layout_constraintStart_toStartOf="parent"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="1dp" />



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textAllCaps="false"
                android:background="#00000000"
                android:text="Forgot password?"
                android:textColor="#007CFF" />

        </LinearLayout>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>

