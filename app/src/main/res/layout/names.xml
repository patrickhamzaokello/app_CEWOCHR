<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"

        >

        <RelativeLayout
            android:id="@+id/cart_product_image_layout"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/image_card_view"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/cart_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:background="@color/purple_500"
                    android:src="@drawable/africanwoman"></ImageView>


                <ProgressBar
                    android:id="@+id/cart_progress"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="@dimen/activity_margin"
                    android:layout_height="@dimen/activity_margin"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:theme="@style/CircularProgress" />


            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_toRightOf="@+id/cart_product_image_layout"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/imageViewStatus"
            android:id="@+id/carddetailscard"
            android:padding="10dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewName"
                    style="@style/TextAppearance.AppCompat.Subhead.Inverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="100"
                    android:maxLines="2"
                    android:fontFamily="@font/roboto_regular"
                    android:textAllCaps="true"
                    android:text="Patrick Okello"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/movie_year"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.4"
                    android:gravity="left"
                    android:fontFamily="@font/roboto_regular"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="CEWOCHR"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/child_description"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:fontFamily="@font/roboto_regular"
                    android:includeFontPadding="false"
                    android:maxLines="4"
                    android:layout_marginTop="10dp"
                    android:text="Brief Description"
                    android:textColor="@color/black" />

            </LinearLayout>

            <TextView
                android:id="@+id/cart_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                android:text="12 Yrs"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/cart_item_Rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:textColor="#077334"
                android:fontFamily="@font/roboto_regular"
                android:textSize="10sp"
                android:text="Male"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_product_image_layout"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child"
                android:textColor="@color/white"
                android:background="@color/purple_500"
                android:textSize="10sp"
                android:fontFamily="@font/roboto_regular"
                android:paddingHorizontal="8dp"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/fooditemtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lira"
                android:fontFamily="@font/roboto_regular"
                />



        </LinearLayout>




        <ImageView
            android:background="@drawable/ic_success"
            android:layout_alignParentRight="true"
            android:id="@+id/imageViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnCartItemRemove"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_below="@+id/imageViewStatus"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/carddetailscard"
            android:background="@drawable/custom_btn_close"
            android:theme="@style/BlackBtn" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>